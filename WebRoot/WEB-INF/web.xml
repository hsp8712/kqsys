<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <listener>
  	<listener-class>net.oraro.control.ContextListener</listener-class>
  </listener>
  
  <filter>
    <filter-name>i18nservletfilter</filter-name>
    <filter-class>net.oraro.filter.I18nServletFilter</filter-class>
    <init-param>
      <param-name>charset</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>SessionFilter</filter-name>
    <filter-class>net.oraro.filter.SessionFilter</filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>i18nservletfilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>/servlet/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>/page/*</url-pattern>
  </filter-mapping>
  
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>LoginAndOutServlet</servlet-name>
    <servlet-class>net.oraro.control.LoginAndOutServlet</servlet-class>
  </servlet>
  <servlet>
    <description>check in servlet</description>
    <display-name>CheckinServlet</display-name>
    <servlet-name>CheckinServlet</servlet-name>
    <servlet-class>net.oraro.control.CheckinServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DailyRecordServlet</servlet-name>
    <servlet-class>net.oraro.control.DailyRecordServlet</servlet-class>
  </servlet>
  <servlet>
    <description>team servlet</description>
    <display-name>team servlet</display-name>
    <servlet-name>TeamServlet</servlet-name>
    <servlet-class>net.oraro.control.TeamServlet</servlet-class>
  </servlet>
  <servlet>
    <description>user servlet</description>
    <display-name>user servlet</display-name>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>net.oraro.control.UserServlet</servlet-class>
  </servlet>
   <servlet>
    <description>rightgrp</description>
    <display-name>rightgrp</display-name>
    <servlet-name>RightgrpServlet</servlet-name>
    <servlet-class>net.oraro.control.RightgrpServlet</servlet-class>
  </servlet>
  <servlet>
    <description>checkin record</description>
    <display-name>checkin record</display-name>
    <servlet-name>CheckinRecordServlet</servlet-name>
    <servlet-class>net.oraro.control.CheckinRecordServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginAndOutServlet</servlet-name>
    <url-pattern>/servlet/LoginAndOutServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CheckinServlet</servlet-name>
    <url-pattern>/servlet/CheckinServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DailyRecordServlet</servlet-name>
    <url-pattern>/servlet/DailyRecordServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TeamServlet</servlet-name>
    <url-pattern>/servlet/TeamServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/servlet/UserServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RightgrpServlet</servlet-name>
    <url-pattern>/servlet/RightgrpServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CheckinRecordServlet</servlet-name>
    <url-pattern>/servlet/CheckinRecordServlet</url-pattern>
  </servlet-mapping>
  
  <session-config>
  	<session-timeout>20</session-timeout>
  </session-config>
  
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
</web-app>
